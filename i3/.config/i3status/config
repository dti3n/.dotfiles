general {
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "volume master"
order += "battery 1"
order += "tztime local"

cpu_usage {
    format = " CPU %usage "
    max_threshold= 75
}

cpu_temperature 0 {
    format = " TEM %degreesÂ°C "
}

memory {
    format = " MEM %used (%total) "
}

disk "/" {
    format = " DSK %free (%avail) "
}

volume master {
    format = " VOL %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 1 {
    last_full_capacity = true
    format = " %status %percentage %remaining "
}

tztime local {
    format = " %a %b %d %H:%M "
}
